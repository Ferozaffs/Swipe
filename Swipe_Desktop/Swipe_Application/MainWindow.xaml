<Window
    x:Class="Swipe_Application.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Swipe_Application"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1024"
    Height="768"
    mc:Ignorable="d">

    <Grid Background="#444444">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="64" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Background="#222222">
            <Button
                x:Name="HomeBtn"
                Width="36"
                Height="36"
                Margin="0,10,0,10"
                Click="Home_Click"
                Content="⌂"
                FontSize="28"
                Style="{StaticResource FlatDarkButton}" />
            <Button
                x:Name="FunctionsBtn"
                Width="36"
                Height="36"
                Margin="0,10,0,10"
                Click="Functions_Click"
                Content="ƒ𝑥"
                FontSize="24"
                Style="{StaticResource FlatDarkButton}" />
            <Button
                x:Name="DataBtn"
                Width="36"
                Height="36"
                Margin="0,10,0,10"
                Click="Data_Click"
                Content="📈"
                FontSize="20"
                Style="{StaticResource FlatDarkButton}" />

        </StackPanel>
        <StackPanel Grid.Column="1">
            <Grid Background="#333333">
                <WrapPanel
                    Width="Auto"
                    Height="48"
                    HorizontalAlignment="Right"
                    Background="#333333">
                    <TextBlock
                        FontSize="30"
                        Foreground="#444444"
                        Text="|" />
                    <TextBlock
                        Margin="5,7,0,5"
                        FontSize="24"
                        Foreground="Gray"
                        Text="📱" />
                    <Button
                        x:Name="PadConnectionBtn"
                        Width="36"
                        Height="36"
                        Margin="5,0,0,5"
                        Click="ConnectionBandButton_Click"
                        Content="⟳"
                        FontSize="24"
                        Foreground="IndianRed"
                        Style="{StaticResource FlatDarkButton}" />
                    <TextBlock
                        FontSize="30"
                        Foreground="#444444"
                        Text="|" />
                    <TextBlock
                        x:Name="BandDataStatusText"
                        Width="36"
                        Height="36"
                        Margin="5,9,0,5"
                        FontSize="20"
                        Foreground="Gray"
                        Text="۝"
                        TextAlignment="Center" />
                    <Button
                        x:Name="CalibrateBtn"
                        Width="36"
                        Height="36"
                        Margin="5,3,0,10"
                        Click="RecalibrateBandButton_Click"
                        Content="⌖"
                        FontSize="30"
                        Style="{StaticResource FlatDarkButton}" />
                    <Button
                        x:Name="BandConnectionBtn"
                        Width="36"
                        Height="36"
                        Margin="5,0,0,5"
                        Click="ConnectionBandButton_Click"
                        Content="⟳"
                        FontSize="24"
                        Foreground="IndianRed"
                        Style="{StaticResource FlatDarkButton}" />
                </WrapPanel>
            </Grid>
            <local:HomeView x:Name="HomeViewControl" />
            <local:FunctionView x:Name="FunctionViewControl" Visibility="Collapsed" />
            <local:DataView x:Name="DataViewControl" Visibility="Collapsed" />
        </StackPanel>
    </Grid>
</Window>
