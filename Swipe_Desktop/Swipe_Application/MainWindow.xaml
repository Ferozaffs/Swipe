<Window
    x:Class="Swipe_Application.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Swipe_Application"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1024"
    Height="768"
    Background="#222222"
    Icon="pack://application:,,,/SwipeIcon.ico"
    mc:Ignorable="d">

    <Grid Background="#444444">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Background="#222222">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Margin="20,0,20,0">
                <Button
                    Padding="0"
                    HorizontalAlignment="Left"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="Home_Click"
                    Style="{StaticResource FlatDarkButton}">
                    <WrapPanel>
                        <TextBlock
                            Margin="0,10,0,10"
                            VerticalAlignment="Center"
                            FontSize="28"
                            Text="⌂" />
                        <TextBlock
                            x:Name="HomeDetails"
                            Margin="5"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Foreground="Gray"
                            Text="Home" />
                    </WrapPanel>
                </Button>

                <Button
                    Padding="0"
                    HorizontalAlignment="Left"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="Functions_Click"
                    Style="{StaticResource FlatDarkButton}">
                    <WrapPanel>
                        <TextBlock
                            Margin="0,10,0,10"
                            VerticalAlignment="Center"
                            FontSize="24"
                            Text="ƒ𝑥" />
                        <TextBlock
                            x:Name="FunctionDetails"
                            Margin="5"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Foreground="Gray"
                            Text="Functions" />
                    </WrapPanel>
                </Button>

            </StackPanel>
            <StackPanel
                Grid.Row="1"
                Margin="20,0,20,0"
                VerticalAlignment="Bottom">
                <Button
                    Padding="0"
                    HorizontalAlignment="Left"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="CurveDebugging_Click"
                    Style="{StaticResource FlatDarkButton}">
                    <WrapPanel>
                        <TextBlock
                            Margin="0,10,0,10"
                            VerticalAlignment="Center"
                            FontSize="20"
                            Text="📈" />
                        <TextBlock
                            x:Name="CurvesDetails"
                            Margin="5"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Foreground="Gray"
                            Text="Curves" />
                    </WrapPanel>
                </Button>

                <Button
                    Padding="0"
                    HorizontalAlignment="Left"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="Settings_Click"
                    Style="{StaticResource FlatDarkButton}">
                    <WrapPanel>
                        <TextBlock
                            Margin="0,10,0,10"
                            VerticalAlignment="Center"
                            FontSize="20"
                            Text="⚙️" />
                        <TextBlock
                            x:Name="SettingsDetails"
                            Margin="5"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Foreground="Gray"
                            Text="Settings" />
                    </WrapPanel>
                </Button>

            </StackPanel>
        </Grid>
        <StackPanel Grid.Column="1">
            <Grid Background="#333333">
                <WrapPanel
                    Width="Auto"
                    Height="48"
                    HorizontalAlignment="Right"
                    Background="#333333">
                    <TextBlock
                        FontSize="30"
                        Foreground="#444444"
                        Text="|" />
                    <TextBlock
                        x:Name="PadStatus"
                        Margin="5,7,0,5"
                        FontSize="24"
                        Foreground="Gray"
                        Text="📱" />
                    <Button
                        x:Name="PadConnectionBtn"
                        Width="36"
                        Height="36"
                        Margin="5,0,0,5"
                        Click="ConnectionPadButton_Click"
                        Content="⟳"
                        FontSize="24"
                        Foreground="IndianRed"
                        Style="{StaticResource FlatDarkButton}" />
                    <TextBlock
                        FontSize="30"
                        Foreground="#444444"
                        Text="|" />
                    <TextBlock
                        x:Name="BandDataStatusText"
                        Width="36"
                        Height="36"
                        Margin="5,9,0,5"
                        FontSize="20"
                        Foreground="Gray"
                        Text="۝"
                        TextAlignment="Center" />
                    <Button
                        x:Name="CalibrateBtn"
                        Width="36"
                        Height="36"
                        Margin="5,3,0,10"
                        Click="RecalibrateBandButton_Click"
                        Content="⌖"
                        FontSize="30"
                        Style="{StaticResource FlatDarkButton}" />
                    <Button
                        x:Name="BandConnectionBtn"
                        Width="36"
                        Height="36"
                        Margin="5,0,0,5"
                        Click="ConnectionBandButton_Click"
                        Content="⟳"
                        FontSize="24"
                        Foreground="IndianRed"
                        Style="{StaticResource FlatDarkButton}" />
                </WrapPanel>
            </Grid>
            <local:HomeView x:Name="HomeViewControl" />
            <local:FunctionView x:Name="FunctionViewControl" Visibility="Collapsed" />
            <local:CurveDebuggerView x:Name="CurveDebuggerViewControl" Visibility="Collapsed" />
            <local:SettingsView x:Name="SettingsViewControl" Visibility="Collapsed" />
        </StackPanel>
    </Grid>
</Window>
