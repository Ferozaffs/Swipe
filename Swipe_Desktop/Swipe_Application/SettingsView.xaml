<UserControl
    x:Class="Swipe_Application.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Swipe_Application"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel HorizontalAlignment="Stretch">
        <TextBlock
            Margin="5"
            FontSize="20"
            Foreground="Gray"
            Text="Settings" />
        <WrapPanel>
            <TextBlock
                Margin="5"
                FontSize="14"
                Foreground="Gray"
                Text="Autostart:" />
            <CheckBox
                x:Name="AutostartCheck"
                Width="350"
                Margin="5,8,5,10"
                Background="LightGray"
                Checked="AutostartCheck_Checked"
                IsChecked="False"
                Unchecked="AutostartCheck_Unchecked" />
        </WrapPanel>
        <Canvas Height="2" Background="#333333" />
        <TextBlock
            Margin="5"
            FontSize="20"
            Foreground="Gray"
            Text="Band" />
        <WrapPanel>
            <TextBlock
                Margin="5"
                FontSize="14"
                Foreground="Gray"
                Text="Curve activation sensitivity:" />
            <DockPanel Margin="5">
                <TextBox
                    Width="40"
                    Background="#333333"
                    BorderThickness="0"
                    DockPanel.Dock="Right"
                    FontSize="12"
                    Foreground="LightGray"
                    Text="{Binding ElementName=DTWSlider, Path=Value, UpdateSourceTrigger=PropertyChanged}"
                    TextAlignment="Right" />
                <Slider
                    x:Name="DTWSlider"
                    Width="200"
                    Maximum="5.0"
                    Minimum="0.5"
                    ValueChanged="DTWSlider_ValueChanged" />
            </DockPanel>
            <TextBlock
                Margin="5"
                FontSize="10"
                Foreground="Gray"
                Text="Last DTW:" />
            <TextBlock
                x:Name="LastDTW"
                Margin="5"
                FontSize="10"
                Foreground="Gray"
                Text="-" />
        </WrapPanel>
        <Canvas Height="2" Background="#333333" />
        <TextBlock
            Margin="5"
            FontSize="20"
            Foreground="Gray"
            Text="Log" />
        <TextBlock
            x:Name="Log"
            Margin="5"
            FontSize="12"
            Foreground="Gray" />
    </StackPanel>
</UserControl>
