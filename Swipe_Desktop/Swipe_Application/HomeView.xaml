<UserControl
    x:Class="Swipe_Application.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Swipe_Application"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="768"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel Margin="0,0,0,-170">
        <TextBlock
            Margin="5"
            FontSize="20"
            Foreground="Gray"
            Text="Devices" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                <WrapPanel Height="50">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        FontSize="20"
                        Foreground="Gray"
                        Text="Keyboard" />
                    <TextBlock
                        Margin="10,0,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        FontSize="28"
                        Foreground="Gray"
                        Text="⌨" />
                </WrapPanel>
                <StackPanel x:Name="KeyboardPanel" Margin="0,5,0,0">
                    <TextBlock
                        FontSize="14"
                        Foreground="Gray"
                        Text="Name: -" />
                    <TextBlock
                        Margin="0,5,0,0"
                        FontSize="14"
                        Foreground="Gray"
                        Text="Status: -" />
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                <WrapPanel Height="50">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        FontSize="20"
                        Foreground="Gray"
                        Text="Pad" />
                    <TextBlock
                        Margin="10,0,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        FontSize="24"
                        Foreground="Gray"
                        Text="📱" />
                </WrapPanel>
                <StackPanel x:Name="PadPanel" Margin="0,5,0,0">
                    <TextBlock
                        FontSize="14"
                        Foreground="Gray"
                        Text="Name: -" />
                    <TextBlock
                        Margin="0,5,0,0"
                        FontSize="14"
                        Foreground="Gray"
                        Text="Status: -" />
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                <WrapPanel Height="50">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        FontSize="20"
                        Foreground="Gray"
                        Text="Band" />
                    <TextBlock
                        Margin="10,0,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        FontSize="24"
                        Foreground="Gray"
                        Text="۝" />
                </WrapPanel>
                <StackPanel x:Name="BandPanel" Margin="0,5,0,0">
                    <TextBlock
                        FontSize="14"
                        Foreground="Gray"
                        Text="Name: -" />
                    <TextBlock
                        Margin="0,5,0,0"
                        FontSize="14"
                        Foreground="Gray"
                        Text="Status: -" />
                </StackPanel>
            </StackPanel>
        </Grid>
        <Canvas
            Height="2"
            Margin="0,10,0,0"
            Background="#333333" />
        <TextBlock
            Margin="5"
            FontSize="20"
            Foreground="Gray"
            Text="Functions" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <TextBlock
                    Margin="5"
                    FontSize="14"
                    Foreground="Gray"
                    Text="Top activations" />
                <Border
                    Margin="5"
                    Background="#333333"
                    CornerRadius="2">
                    <StackPanel
                        x:Name="TopActivations"
                        Height="200"
                        Margin="5"
                        Background="#333333"
                        CanVerticallyScroll="true" />
                </Border>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <TextBlock
                    Margin="5"
                    FontSize="14"
                    Foreground="Gray"
                    Text="Latest activations" />
                <Border
                    Margin="5"
                    Background="#333333"
                    CornerRadius="2">
                    <StackPanel
                        x:Name="LatestActivations"
                        Height="200"
                        Margin="5"
                        Background="#333333"
                        CanVerticallyScroll="true" />
                </Border>
            </StackPanel>

        </Grid>
        <Canvas
            Height="2"
            Margin="0,10,0,0"
            Background="#333333" />
        <TextBlock
            Margin="5"
            FontSize="20"
            Foreground="Gray"
            Text="Tips" />
        <TextBlock
            Margin="20,5,5,5"
            FontSize="12"
            Foreground="Gray"
            Text="- Enable autostart in settings" />
        <TextBlock
            Margin="20,5,5,5"
            FontSize="12"
            Foreground="Gray"
            Text="- Enable compact view in settings" />
        <TextBlock
            Margin="20,5,5,5"
            FontSize="12"
            Foreground="Gray"
            Text="- Use the 'NewProcess' argument with launch function to always spawn a new process" />
        <TextBlock
            Margin="20,5,5,5"
            FontSize="12"
            Foreground="Gray"
            Text="- When using register and foreground app commands, change the command instance to be able to save multiple different application handles" />
    </StackPanel>
</UserControl>
